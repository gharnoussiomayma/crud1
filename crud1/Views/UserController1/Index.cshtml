@model List<crud1.Models.User>
@{
}
<h1>Users</h1>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>Salary</th>
            <th>Date of Birth</th>
            <th>Department</th>
        </tr>
    </thead>
    <tbody>
@foreach (var user in Model)
{
    <tr>
        <td>@user.Id</td>
        <td>@user.Name</td>
        <td>@user.Email</td>
        <td>@user.Salary</td>
        <td>@user.DateOfBirth.ToString("dd-MM-yyyy")</td>
        <td>@user.Department</td>
        <td><a href="Users/View/@user.Id">View</a></td>
    </tr>
}
    </tbody>
</table>
